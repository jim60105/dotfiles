{{- if .devcontainer -}}
approval_policy = "never"
sandbox_mode = "danger-full-access"
{{- else -}}
approval_policy = "on-failure"
sandbox_mode = "workspace-write"
{{- end }}

preferred_auth_method = "chatgpt"

model_reasoning_summary = "auto"
model_reasoning_summary_format = "experimental"
# model_reasoning_effort = "none"
file_opener = "vscode-insiders"
model = "gpt-5.2-codex"
personality = "pragmatic"

# Extra settings that only apply when `sandbox = "workspace-write"`.
[sandbox_workspace_write]
# By default, only the cwd for the Codex session will be writable (and $TMPDIR
# on macOS), but you can specify additional writable folders in this array.
writable_roots = ["/tmp"]
# Allow the command being run inside the sandbox to make outbound network
# requests. Disabled by default.
network_access = true

{{ if .githubPatForMcp -}}
# GitHub MCP Server with write access
[mcp_servers.github-sudo]
url = "https://api.githubcopilot.com/mcp/"
bearer_token_env_var = "GH_TOKEN"
http_headers = { "X-MCP-Toolsets" = "issues,pull_requests" }

# GitHub MCP Server with read-only access
[mcp_servers.github-ro]
url = "https://api.githubcopilot.com/mcp/"
bearer_token_env_var = "GH_TOKEN"
http_headers = { "X-MCP-Readonly" = "true", "X-MCP-Toolsets" = "repos,actions" }
{{- end }}

[shell_environment_policy]
{{ if .devcontainer -}}
# inherit can be "core" (default), "all", or "none"
inherit = "all"
ignore_default_excludes = true
{{- else -}}
inherit = "core"
{{- end }}

# force-set / override values
set = { GIT_AUTHOR_NAME = "Codex-CLI", GIT_AUTHOR_EMAIL = "bot@ChenJ.im", GIT_COMMITTER_NAME = "Jim Chen", GIT_COMMITTER_EMAIL = "Jim@ChenJ.im", GH_PROMPT_DISABLED = "true", GH_NO_UPDATE_NOTIFIER = "true", GH_NO_EXTENSION_UPDATE_NOTIFIER = "true", GH_TOKEN = {{ .githubPatForMcp | quote }} }
