{{- if eq .chezmoi.hostname "Jim-Fedora" -}}
approval_policy = "on-failure"
sandbox_permissions = [
    "disk-write-platform-user-temp-folder",
    "disk-write-platform-global-temp-folder",
    "disk-write-cwd",
]
{{- else }}
approval_policy = "never"
sandbox_permissions = [
    "disk-full-read-access",
    "disk-write-platform-user-temp-folder",
    "disk-write-platform-global-temp-folder",
    "disk-write-cwd",
    "disk-full-write-access",
    "network-full-access"
]
{{- end }}

model = "codex-mini-latest"
model_provider = "one-api"
model_reasoning_summary = "none"
# model_reasoning_effort = "none"
file_opener = "vscode-insiders"

[model_providers.one-api]
name = "Local AI APIM"
base_url = "http://one-api.local/v1"
env_key = "OPENAI_API_KEY"
wire_api = "responses"

# GitHub MCP Server configuration via mcp-proxy
[mcp_servers.github]
command = "uvx"
args = [
    "mcp-proxy",
    "--headers",
    "X-MCP-Toolsets=issues,pull_requests",
    "https://api.githubcopilot.com/mcp/"
]
{{- if .github_pat_for_mcp }}
env = { "API_ACCESS_TOKEN" = {{ .github_pat_for_mcp | quote }} }
{{- end }}

